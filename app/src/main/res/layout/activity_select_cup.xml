<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectCupActivity"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select your cup"
                android:textColor="@color/yellow"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginTop="70dp"
                android:textStyle="bold"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:ignore="MissingConstraints"
            android:orientation="vertical"
            android:layout_below="@+id/row1"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:id="@+id/subrow1">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/glass1"
                    android:scaleType="fitXY"
                    />


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/glass2"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/glass3"
                    android:scaleType="fitXY"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/subrow2">

                <TextView
                    android:layout_width="110dp"
                    android:id="@+id/glass1"
                    android:layout_height="wrap_content"
                    android:text="400ml"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="12dp">

                </TextView>

                <TextView
                    android:id="@+id/glass2"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="500ml"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="12dp">

                </TextView>

                <TextView
                    android:id="@+id/glass3"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="450ml"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="12dp">

                </TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/subrow3">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/glass4"
                    android:scaleType="fitXY"
                    />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/glass5"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/glass8"
                    android:scaleType="fitXY"
                  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp"
                android:id="@+id/subrow4">

                <TextView
                    android:id="@+id/glass4"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="200ml"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="12dp">

                </TextView>

                <TextView
                    android:id="@+id/glass5"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="500ml"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="12dp">

                </TextView>

                <TextView
                    android:id="@+id/glass6"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="500ml"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="12dp">

                </TextView>


            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/row3"
            android:layout_below="@+id/row2"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_glass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/title_bar_layout"
                    android:background="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_marginStart="15dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/watericon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/userName"
                    android:layout_height="wrap_content"
                    android:text="How about having a cup of tea after having the lunch? ?"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="italic"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>




        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>