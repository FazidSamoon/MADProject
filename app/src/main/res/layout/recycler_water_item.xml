<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    android:padding="12dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/second"
        android:weightSum="3"
        android:layout_below="@+id/icons">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily water target :"
                android:textSize="16sp"
                android:id="@+id/target1"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginVertical="4dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Water target"
                android:textSize="16sp"
                android:id="@+id/water_view"
                android:textColor="@color/white"
                android:layout_marginVertical="4dp"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/third"
        android:weightSum="3"
        android:layout_below="@+id/icons">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your daily mode is:"
                android:textSize="16sp"
                android:layout_marginLeft="30dp"
                android:id="@+id/target2"
                android:textColor="@color/white"
                android:layout_marginVertical="4dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily mode"
                android:id="@+id/daily_view"
                android:maxLines="2"
                android:textSize="16sp"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:layout_marginVertical="4dp"/>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/fourth"
        android:weightSum="3"
        android:layout_below="@+id/icons">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last target status:"
                android:textSize="16sp"
                android:layout_marginLeft="30dp"
                android:id="@+id/target3"
                android:textColor="@color/white"
                android:layout_marginVertical="4dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="completed"
                android:id="@+id/complete_view"
                android:maxLines="2"
                android:textSize="16sp"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:layout_marginVertical="4dp"/>


        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/fifth"
        android:weightSum="3"
        android:layout_below="@+id/icons"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">



            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_update_water1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/primary_button"
                android:text="Update my target"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>





</LinearLayout>